{
  "openapi": "3.0.0",
  "info": {
    "title": "Naari Kavach API",
    "version": "1.0.0",
    "description": "API documentation for Naari Kavach - Women Safety Platform"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Local Server"
    },
    {
      "url": "https://naari-kavach-api.com/api",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "User login",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" }
        }
      }
    }
  }
}
